<div class="d-flex flex-wrap overflow-scroll">
    <h1>Schedule</h1>
    <% for (course of courses){%>
        <div class="p-3 m-3 border border-primary bg-light">
            <a href="/schedule/remove/<%= course._id %>">X</a>
            <div class="">
                <span>
                    <%= course.subject %> 
                    <%= course.coursenum %> 
                    <%= course.term %> 
                </span>
                <strong><%= course.name %></strong>
                
            </div>
            <div class="mb-1">
                <%=course.instructor[0] %>
                <%=course.instructor[1] %>
                (<%=course.instructor[2] %>)
            </div>
            <div class="mb-1">
                Enrollment: <%=course.enrolled %>,
                Limit: <%=course.limit || 999 %>
                
             </div>
             <div class="">
                 <em><%=course.details %></em>
             </div>
             <div class="p-3">
                 <%=course.description %>
             </div>
        
        </div>
    <% } %>
</div>

